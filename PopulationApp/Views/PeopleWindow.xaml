<Window x:Class="PopulationApp.Views.PeopleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopulationApp.Views"
        mc:Ignorable="d"
        Title="Люди" Height="500" Width="800">
    <Grid>
        <DataGrid Name="DataGridPeople" HorizontalAlignment="Left" Height="440" Margin="10,10,0,0" VerticalAlignment="Top" Width="550" IsReadOnly="True"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="569,10,0,0" VerticalAlignment="Top" Width="204" Height="47" FontSize="20" FontFamily="Arial" Click="Button_Add_Click"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="569,62,0,0" VerticalAlignment="Top" Width="204" Height="47" FontSize="20" FontFamily="Arial" Click="Button_Edit_Click"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="569,114,0,0" VerticalAlignment="Top" Width="204" Height="47" FontSize="20" FontFamily="Arial" Click="Button_Delete_Click"/>

    </Grid>
</Window>
